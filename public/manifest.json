{
  "name": "Amanuensis",
  "description": "Takes notes on page contents.",
  "version": "0.0.1",
  "icons": {
    "512": "logo512.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "512": "logo512.png"
    },
    "default_title": "Amanuensis",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+N"
      },
      "description": "Take a note on the currently highlighted text or the page generally."
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 2
}